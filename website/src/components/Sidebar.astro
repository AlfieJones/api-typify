---
interface Links {
  title: string;
  links: {
    text: string;
    href: string;
  }[];
}
const links: Links[] = [
  {
    title: "Getting Started",
    links: [
      {
        text: "About",
        href: "/",
      },
      {
        text: "Installation",
        href: "/installation",
      },
    ],
  },
  {
    title: "Advanced",
    links: [
      {
        text: "Custom Fetcher",
        href: "/fetcher",
      },
      {
        text: "Reccomended Usage",
        href: "/usage",
      },
    ],
  },
];
---

<nav class="text-base lg:text-sm">
  <ul class="space-y-9" role="list">
    {
      links.map((group) => (
        <li>
          <h2 class="font-display font-medium text-zinc-900 dark:text-white">
            {group.title}
          </h2>
          <ul
            class="mt-2 space-y-2 border-l-2 border-zinc-100 dark:border-zinc-800 lg:mt-4 lg:space-y-4 lg:border-zinc-200"
            role="list"
          >
            {group.links.map((link) => (
              <li class="relative">
                <a
                  class="block w-full pl-3.5 before:pointer-events-none before:absolute before:-left-1 before:top-1/2 before:h-1.5 before:w-1.5 before:-translate-y-1/2 before:rounded-full text-zinc-500 before:hidden before:bg-zinc-300 hover:text-zinc-600 hover:before:block dark:text-zinc-400 dark:before:bg-zinc-700 dark:hover:text-zinc-300"
                  href={link.href}
                >
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </li>
      ))
    }
  </ul>
</nav>
